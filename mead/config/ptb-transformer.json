{
    "task": "lm",
    "basedir": "ptb-transformer",
    "batchsz": 20,
    "unif": 0.1,
    "preproc": {
       "lower": true
    },
    "nbptt": 60,
    "backend": "pytorch",
    "dataset": "ptb",
    "loader": {
        "reader_type": "default",
        "tgt_key": "word"
    },
    "features": [
        {
            "name": "word",
            "vectorizer": {
                "type": "token1d",
                "fields": "text"
            },
            "embeddings": {"dsz":  300, "type": "positional"}

        }

    ],
    "model": {
        "model_type": "transformer",
	"num_heads": 4,
        "hsz": 300,
        "layers": 2,
        "pdrop": 0.65
    },
    "train": {
        "epochs": 40,
        "optim": "adamw",
        "weight_decay": 1e-8,
        "eta": 4e-4,
        "do_early_stopping": true,
        "clip": 0.5 
    }
}

