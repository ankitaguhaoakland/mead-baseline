{
  "task": "classify",
  "basedir": "./trec-bert",
  "batchsz": 10,
  "features": [
    {
      "name": "bert",
      "vectorizer": {
        "type": "wordpiece1d",
        "modules": "hub:v1:addons:vec_bert_tf",
        "file": "https://www.dropbox.com/s/0ddn79oytf95wvh/vocab.txt?dl=1"
      },
      "embeddings": {
	    "label": "bert-base-uncased-pooled-tf"
      }
    }
  ],
  "preproc": {
    "mxlen": 100
  },
  "backend": "tf",
  "dataset": "trec",
  "loader": {
    "reader_type": "default"
  },
  "unif": 0.25,
  "model": {
    "model_type": "fine-tune"
  },
  "train": {
    "epochs": 5,
    "optim": "adamw",
    "eta":  0.00001,
    "weight_decay": 1.0e-8,
    "early_stopping_metric": "acc",
    "verbose": {
      "console": true,
      "file": "trec-cm.csv"
    }
  }
}
